<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:progressActivity="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_40sdp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BaseColor"
        android:orientation="vertical">



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_todays_revenue"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_alignParentTop="true"
                        android:background="@color/main_text"
                        app:cardBackgroundColor="@color/main_text"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_gravity="center">

                        <com.sa.grabgo.vendor.view.AppTextView_SubTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/todays_revenue"
                            android:textAppearance="@style/SmallerText"
                            android:textColor="@color/white"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">
                            <com.sa.grabgo.vendor.view.AppTextView_SubTitle
                                android:id="@+id/tv_td_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SAR"
                                android:textColor="@color/white"
                                android:textAppearance="@style/MediumSizeText"/>
                            <com.sa.grabgo.vendor.view.AppTextView_SubTitle
                                android:id="@+id/tv_td_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="45000"
                                android:textAppearance="@style/MediumSizeText"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                            <com.sa.grabgo.vendor.view.AppTextView_SubTitle
                                android:id="@+id/tv_td_orders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="45 Orders"
                                android:textAppearance="@style/SmallerText"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_week_revenue"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_alignParentTop="true"
                        android:background="@color/semi_color"
                        app:cardBackgroundColor="@color/semi_color"
                        android:layout_marginLeft="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_gravity="center">

                            <com.sa.grabgo.vendor.view.AppTextView_SubTitle
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/week_revenue"
                                android:textAppearance="@style/SmallerText"
                                android:textColor="@color/white"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:orientation="horizontal">
                                <com.sa.grabgo.vendor.view.AppTextView_SubTitle
                                    android:id="@+id/tv_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SAR"
                                    android:textColor="@color/white"
                                    android:textAppearance="@style/MediumSizeText"/>
                                <com.sa.grabgo.vendor.view.AppTextView_SubTitle
                                    android:id="@+id/tv_revenue_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="45000"
                                    android:textAppearance="@style/MediumSizeText"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                            <com.sa.grabgo.vendor.view.AppTextView_SubTitle
                                android:id="@+id/tv_total_orders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="45 Orders"
                                android:textAppearance="@style/SmallerText"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp">

                    <com.sa.grabgo.vendor.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/new_order"
                        android:textColor="@color/semi_color"
                        android:textAppearance="@style/SmallestSizeText"/>


                </LinearLayout>

                <com.vlonjatg.progressactivity.ProgressLinearLayout
                    android:id="@+id/home_category_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8sdp"
                    app:emptyTitleTextColor="@color/red_color"
                    app:errorContentTextColor="@color/app_fontColor"
                    app:errorTitleTextColor="@color/app_fontColor"
                    progressActivity:emptyBackgroundColor="@color/transparent"
                    progressActivity:errorBackgroundColor="@color/transparent"
                    progressActivity:loadingBackgroundColor="@color/transparent"
                    progressActivity:loadingProgressBarColor="@color/red_color">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rr_home_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        progressActivity:listitem="@layout/activity_home_adapter"/>
                </com.vlonjatg.progressactivity.ProgressLinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
