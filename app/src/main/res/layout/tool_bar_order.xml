<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="center"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.sauthi.grabgo.vendor.view.AppTextView
            android:id="@+id/toolbar_orders"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:maxLines="1"
            android:text="@string/orders"
            android:textAllCaps="false"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/semi_color"
            android:textStyle="bold"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="horizontal">
            <com.sauthi.grabgo.vendor.view.AppTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/est_time"
                android:textAllCaps="false"
                android:textAppearance="@style/SmallerText"
                android:textColor="@color/Color_confirm_order"
                android:textStyle="normal"
                android:visibility="visible" />
            <com.sauthi.grabgo.vendor.view.AppTextView
                android:id="@+id/tv_est_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_gravity="center"
                android:text=""
                android:textAllCaps="false"
                android:textAppearance="@style/SmallerText"
                android:textColor="@color/Color_confirm_order"
                android:textStyle="normal"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>

</androidx.appcompat.widget.Toolbar>
