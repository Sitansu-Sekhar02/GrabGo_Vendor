<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/button_yellow</item>
        <item name="windowActionBar">false</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionMenuTextColor">@color/white</item>

        <!-- Customize your theme here. -->

       <!-- &lt;!&ndash; Status bar stuff. &ndash;&gt;
        <item name="statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowLightStatusBar">true</item>-->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="RedCheck">
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_color</item>
        <item name="boxStrokeWidth">1sp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/app_fontColor</item>
    </style>

    <style name="MediumText" parent="MediumSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>


    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="LargeText" parent="LargeSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="SmallerText" parent="SmallerSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="SmallestText" parent="SmallestSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="SmallText" parent="SmallSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="SmallMediumSizeText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_size_smallMedium</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="SmallMediumText" parent="SmallMediumSizeText">
    </style>

    <style name="MediumSizeText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="LargeSizeText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SmallSizeText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SmallerSizeText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/font_size_smaller</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SmallestSizeText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/font_size_smallest</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/app_fontColor_hint</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/app_fontColor_hint</item>
        <item name="android:textColorPrimary">@color/app_fontColor_hint</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/ColorAccent</item>
        <item name="colorControlNormal">@color/app_fontColor_hint</item>
        <item name="colorControlActivated">@color/app_fontColor_hint</item>
        <item name="colorControlHighlight">@color/app_fontColor_hint</item>
        <item name="backgroundTint">@color/app_fontColor_hint</item>

    </style>



    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ColorAccent</item>
        <item name="android:textSize">@dimen/font_size_smaller</item>
    </style>

    <style name="spinner_style_border">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

       <!-- <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
            <item name="android:actionBarStyle">@style/MyActionBar</item>
        </style>-->

